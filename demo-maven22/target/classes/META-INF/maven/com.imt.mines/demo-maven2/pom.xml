<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 https://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>com.imt.mines</groupId>
  <artifactId>demo-maven2</artifactId>
  <version>0.0.1-SNAPSHOT</version>

    <name>Maven Intro Greeter</name>

    <!-- ========= DEPENDENCIES: libraries used by YOUR code ========= -->
    <dependencies>
        <!-- Main code dependency: used in GreetingService -->
        <dependency>
            <groupId>org.apache.commons</groupId>
            <artifactId>commons-lang3</artifactId>
            <version>3.17.0</version>
        </dependency>

        <!-- Test-only dependency (JUnit 5) -->
        <dependency>
            <groupId>org.junit.jupiter</groupId>
            <artifactId>junit-jupiter</artifactId>
            <version>5.13.4</version>
            <scope>test</scope>
        </dependency>
    </dependencies>

    <!-- ========= PLUGINS: tools used by MAVEN during the build ========= -->
    <build>
        <plugins>
            <!-- Compiler plugin: how Maven compiles the code (Java version, etc.) -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>3.14.1</version>
                <configuration>
                    <source>17</source>
                    <target>17</target>
                </configuration>
            </plugin>

            <!-- Exec plugin: to run the app with `mvn exec:java` -->
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>exec-maven-plugin</artifactId>
                <version>3.6.2</version>
                <configuration>
                    <mainClass>com.imt.mines.greeter.App</mainClass>
                </configuration>
            </plugin>
        </plugins>
    </build>

</project>